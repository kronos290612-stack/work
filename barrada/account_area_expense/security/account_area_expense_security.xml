<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security groups -->
    <record id="group_area_manager" model="res.groups">
        <field name="name">Area Manager</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">Create the expense report with all expenses included.</field>
    </record>

    <record id="group_accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(6, 0, [ref('account_area_expense.group_area_manager')])]"/>
        <field name="comment">Approves the expenditure.</field>
    </record>

    <record id="group_treasury" model="res.groups">
        <field name="name">Treasury</field>
         <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(6, 0, [ref('account_area_expense.group_area_manager')])]"/>
        <field name="comment">Make the payment for the approved expense.</field>
    </record>

    <record id="group_approves_area_expenses" model="res.groups">
        <field name="name">Approves area expenses</field>
         <field name="category_id" ref="base.module_category_hidden"/>
        <field name="comment">Approves area expenses.</field>
    </record>

    <record id="account_area_expense_rule" model="ir.rule">
        <field name="name">Account area expense multi company rule</field>
        <field name="model_id" ref="model_account_area_expense"/>
        <field name="domain_force">[
            ('company_id', 'in', company_ids + [False])
        ]</field>
    </record>

</odoo>