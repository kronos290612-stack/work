<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Settings: Diario de reintegro -->
    <record id="view_hr_expense_settings_reimbursement" model="ir.ui.view">
        <field name="name">hr.expense.settings.reimbursement</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insertar despuÃ©s del campo 'expense_journal_id' -->
           <xpath expr="//field[@name='expense_journal_id']/ancestor::setting[1]" position="after">
                <setting company_dependent="1"
                     string="Expense Reimbursement Journal"
                     help="Default accounting journal for expense reimbursement.">
                  <field name="expense_reimbursement_journal_id"/>
                </setting>

           </xpath>
        </field>
    </record>


    <record id="view_res_config_settings_expense_claim_journal" model="ir.ui.view">
        <field name="name">res.config.settings.expense.claim.journal</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_journal_id']/.." position="after">
                <div class="col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="expense_claim_use_same_journal" widget="boolean"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="expense_claim_use_same_journal"/>
                        <div class="text-muted">
                           Claim invoices will use the same journal set up for employee expenses
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>